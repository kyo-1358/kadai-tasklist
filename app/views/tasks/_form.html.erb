<%= form_with(model: task, local: true) do |f| %>


<% if task.errors.any? %>

    <div id="error_explanation">
      <ul>
        
<% task.errors.full_messages.each do |task| %>

          <li>
<%= task %>
</li>
        
<% end %>

      </ul>
    </div>
  
<% end %>

<div class = "form-group">
<%= f.label :status, 'ステータス' %>
<%= f.select :status, [["済"], ["未"]], class: 'form-control' %>
</div>
  
  
<%= f.label :content, 'タスク' %>

  
<%= f.text_field :content %>


  
<%= f.submit '作成' %>

<% end %>