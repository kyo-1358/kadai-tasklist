<ul>
<% tasks.each do |task| %>

<div>
<span>posted at 
<%= task.created_at %>
</span>
</div>

<li>

<%= link_to task.user.name, user_path(task.user) %>
 :
<%= task.status %>
  &gt;
<%= task.content %>　
</li>

<% if current_user == task.user %>
<%= link_to "詳細", task_path(task) %>

<%= link_to "編集", edit_task_path(task) %>

<%= link_to "削除", task, method: :delete, data: { confirm: "本当に削除しますか？" } %>

<% end %>

<% end %>

 <%= paginate tasks %>
 
 </ul>